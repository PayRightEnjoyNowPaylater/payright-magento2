<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <payright>
                <region>AU</region>
                <minamount>5</minamount>
                <active>1</active>
                <sandbox>1</sandbox>
                <displayterm>Fortnightly</displayterm>
                <title>Payright - Buy Now Pay Later</title>
                <order_status>pending_payment</order_status>
                <payment_action>true</payment_action>
                <model>Payright\Payright\Model\Payright</model>
                <helpers>
                    <payrightintegration>
                        <class>Payright_Helper</class>
                    </payrightintegration>
                </helpers>
                <group>offline</group>
                <instructions_data>Show Payright Installments on:</instructions_data>
                <payrightshowpriceproduct>1</payrightshowpriceproduct>
                <payrightshowpricecategory>1</payrightshowpricecategory>
                <minicart>1</minicart>
                <bestsellerinstalments>1</bestsellerinstalments>
                <crosssellinstalments>1</crosssellinstalments>
                <relatedinstalments>1</relatedinstalments>
                <upsellinstalments>1</upsellinstalments>
                <can_use_checkout>1</can_use_checkout>
            </payright>
            <!-- payment-config -->
        </payment>
    </default>
</config>

